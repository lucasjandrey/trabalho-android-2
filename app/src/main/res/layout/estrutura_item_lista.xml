<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/borda_lista"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_imagemIcone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:src="@drawable/icone_carro" />

    <TextView
        android:id="@+id/item_txtMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_imagemIcone"
        tools:text="Marca"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_iconeSeta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icone_seta" />

    <ImageView
        android:id="@+id/item_iconeFavorito"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/item_iconeSeta"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-13dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icone_favorito"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_txtModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_txtMarca"
        android:layout_toRightOf="@id/item_imagemIcone"
        tools:text="Modelo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/item_txtAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_txtModelo"
        android:layout_toRightOf="@id/item_imagemIcone"
        tools:text="Ano"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/item_txtPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="PreÃ§o"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />
</RelativeLayout>